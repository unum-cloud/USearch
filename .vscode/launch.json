{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Unit Test C++",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build_debug/test_cpp",
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "ASAN_OPTIONS",
                    "value": "detect_leaks=0:atexit=1:strict_init_order=1:strict_string_checks=1:abort_on_error=0"
                },
                {
                    "name": "LSAN_OPTIONS",
                    "value": "verbosity=1:log_threads=1"
                }
            ],
            "stopAtEntry": false,
            "linux": {
                "preLaunchTask": "Linux Build C++ Debug",
                "MIMode": "gdb"
            },
            "osx": {
                "preLaunchTask": "MacOS Build C++ Debug",
                "MIMode": "lldb"
            }
        },
        {
            "name": "Debug C++ on Wiki 1M @Cos",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build_debug/bench_cpp",
            "cwd": "${workspaceFolder}",
            "args": [
                "--vectors",
                "datasets/wiki_1M/base.1M.fbin",
                "--queries",
                "datasets/wiki_1M/query.public.100K.fbin",
                "--neighbors",
                "datasets/wiki_1M/groundtruth.public.100K.ibin",
                "--ip"
            ],
            "environment": [
                {
                    "name": "ASAN_OPTIONS",
                    "value": "detect_leaks=0:atexit=1:strict_init_order=1:strict_string_checks=1"
                }
            ],
            "stopAtEntry": false,
            "linux": {
                "preLaunchTask": "Linux Build C++ Debug",
                "MIMode": "gdb",
                "environment": [
                    {
                        "name": "MALLOC_CHECK_",
                        "value": "2"
                    }
                ]
            },
            "osx": {
                "preLaunchTask": "MacOS Build C++ Debug",
                "MIMode": "lldb"
            }
        },
        {
            "name": "Debug C++ on Text-to-Image 1B @Cos",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build_debug/bench_cpp",
            "cwd": "${workspaceFolder}",
            "args": [
                "--vectors",
                "datasets/t2i_1B/base.1B.fbin",
                "--queries",
                "datasets/t2i_1B/query.public.100K.fbin",
                "--neighbors",
                "datasets/t2i_1B/groundtruth.public.100K.ibin",
                "--cos"
            ],
            "environment": [
                {
                    "name": "ASAN_OPTIONS",
                    "value": "detect_leaks=0:atexit=1:strict_init_order=1:strict_string_checks=1"
                }
            ],
            "stopAtEntry": false,
            "linux": {
                "preLaunchTask": "Linux Build C++ Debug",
                "MIMode": "gdb"
            },
            "osx": {
                "preLaunchTask": "MacOS Build C++ Debug",
                "MIMode": "lldb"
            }
        },
        {
            "name": "Run C++ on Text-to-Image 1M @Cos",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build_release/bench_cpp",
            "cwd": "${workspaceFolder}",
            "args": [
                "--vectors",
                "datasets/t2i_1M/base.1M.fbin",
                "--queries",
                "datasets/t2i_1M/query.public.100K.fbin",
                "--neighbors",
                "datasets/t2i_1M/groundtruth.public.100K.ibin",
            ],
            "stopAtEntry": false,
            "preLaunchTask": "Linux Build C++ Release",
            "MIMode": "gdb"
        },
        {
            "name": "Debug PyTest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "internalConsole",
            "args": [
                "${file}"
            ],
            "justMyCode": true
        },
        {
            "name": "Debug Python Benchmark",
            "type": "python",
            "request": "launch",
            "program": "python/scripts/bench.py",
            "console": "internalConsole",
            "args": [
                "speed",
                "--vectors",
                "datasets/wiki_1M/base.1M.fbin",
                "--queries",
                "datasets/wiki_1M/query.public.100K.fbin",
                "--neighbors",
                "datasets/wiki_1M/groundtruth.public.100K.ibin",
            ],
            "justMyCode": true
        }
    ]
}